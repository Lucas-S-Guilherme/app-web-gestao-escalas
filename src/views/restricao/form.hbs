{{#> main}}
  {{#*inline "content"}}
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{#if restricao}}Editar Restrição{{else}}Nova Restrição{{/if}}</h5>
            <form method="POST" action="{{#if restricao}}/restricao/{{restricao.id_restricao}}/atualizacao{{else}}/restricao/novo{{/if}}">
              <div class="mb-3">
                <label for="nome_restricao" class="form-label">Nome</label>
                <input type="text" class="form-control" id="nome_restricao" name="nome_restricao" value="{{restricao.nome_restricao}}" required>
              </div>
              <div class="mb-3">
                <label for="grupo_restricao" class="form-label">Grupo</label>
                <input type="text" class="form-control" id="grupo_restricao" name="grupo_restricao" value="{{restricao.grupo_restricao}}" required maxlength="2">
                <small class="form-text text-muted">O grupo deve ter exatamente 2 caracteres.</small>
              </div>
              <div class="mb-3">
                <label for="descricao_restricao" class="form-label">Descrição</label>
                <input type="text" class="form-control" id="descricao_restricao" name="descricao_restricao" value="{{restricao.descricao_restricao}}" required>
              </div>
              <button type="submit" class="btn btn-primary">{{#if restricao}}Atualizar{{else}}Salvar{{/if}}</button>
              <a href="/restricao" class="btn btn-secondary">Cancelar</a>
            </form>
          </div>
        </div>
      </div>
    </div>
  {{/inline}}
{{/main}}