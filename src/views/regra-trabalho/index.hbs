{{#> main}}
  {{#*inline "content"}}
    {{#if flashErrors}}
      <div class="alert alert-danger">
        {{#each flashErrors}}
          <p style="margin: 0; padding: 0;">{{this}}</p>
        {{/each}}
      </div>
    {{/if}}

    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Lista de Regras de Trabalho</h5>
            <a href="/regra-trabalho/novo" class="btn btn-primary mb-3">Nova Regra de Trabalho</a>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Descrição</th>
                    <th>Horas de Descanso Mínimas</th>
                    <th>Ações</th>
                  </tr>
                </thead>
                <tbody>
                  {{#if regrasTrabalho}}
                    {{#each regrasTrabalho}}
                      <tr>
                        <td>{{this.id_regra_trabalho}}</td>
                        <td>{{this.descricao_regra_trabalho}}</td>
                        <td>{{this.horas_descanso_minimas}}</td>
                        <td>
                          <a href="/regra-trabalho/{{this.id_regra_trabalho}}/atualizacao" class="btn btn-sm btn-warning">Editar</a>
                          <a href="/regra-trabalho/{{this.id_regra_trabalho}}/exclusao" class="btn btn-sm btn-danger">Excluir</a>
                        </td>
                      </tr>
                    {{/each}}
                  {{else}}
                    <tr>
                      <td colspan="4" class="text-center">Nenhuma regra de trabalho encontrada.</td>
                    </tr>
                  {{/if}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/inline}}
{{/main}}