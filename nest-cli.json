{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "views/**/*",
      "views/layouts/*",
      "views/layouts/partials/*",
      "public/**/*"  
    ],
    "watchAssets": true
  }
}